<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>File Uploader</title>
    <link rel="stylesheet" href="/styles.css" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css"
    />
  </head>
  <body>
    <form action="/signup" method="GET">
      <button type="submit">Go to Signup</button>
    </form>
    <main>
      <% if (currentUser) {%>
      <h1>Welcome back <%= user.username %>!</h1>
      <br />
      <% if (folder) {%> <% if (folder.parentId) {%>
      <button><a href="/<%= folder.parentId %>/">Go back</a></button>
      <% }; %>
      <ul class="folders-and-files">
        <li>
          <p>Name</p>
          <p>Size</p>
          <p>Created at</p>
          <p>Delete</p>
        </li>
        <% folder.children.forEach((child) => { %>
        <li>
          <p>
            <i class="fa-solid fa-folder"></i>
            <a href="/<%= child.id %>/"><%= child.title %></a>
          </p>
          <p>-</p>
          <p>
            <%= child.createdAt.toLocaleString("en-US", { dateStyle: "short",
            timeStyle: "short", }); %>
          </p>
        </li>

        <% }); %> <% folder.files.forEach((file) => { %>
        <li>
          <p>
            <i class="fa-solid fa-file"></i>
            <a href="<%= file.link %>"><%= file.title %></a>
          </p>
          <p><%= format(file.size) %></p>
          <p>
            <%= file.uploadedAt.toLocaleString("en-US", { dateStyle: "short",
            timeStyle: "short", }); %>
          </p>
        </li>
        <% }); %>
      </ul>

      <!-- Button to open modal -->
      <button onclick="openModal()">âž• Add Folder</button>

      <!-- Modal Overlay -->
      <div id="modalOverlay" class="modal-overlay">
        <div class="modal-content">
          <h2>Create New Folder</h2>
          <form action="/<%= folder.id %>/add-folder" method="POST">
            <input
              type="text"
              name="title"
              placeholder="Folder name"
              required
            />
            <!-- optional hidden input for parentId if needed -->
            <input type="hidden" name="parentId" value="<%= folder.id %>" />
            <button type="submit">Create</button>
            <button type="button" onclick="closeModal()">Cancel</button>
          </form>
        </div>
      </div>

      <!-- <form action="/profile" method="post" enctype="multipart/form-data">
        <input type="file" name="file" />
        <button type="submit">Post</button>
      </form> -->

      <form
        action="/<%= folder.id %>/upload"
        method="post"
        enctype="multipart/form-data"
      >
        <input type="file" name="file" />
        <input type="hidden" name="parentId" value="<%= folder.id %>" />
        <button type="submit">Post</button>
      </form>
      <% }%>
      <br />
      <a href="/logout">LOG OUT</a>
      <% } else { %>
      <h1>Please log in stranger. This is a members only zone.</h1>
      <form action="/login" method="POST">
        <label for="username">Username</label>
        <input
          id="username"
          name="username"
          placeholder="username"
          type="text"
        />
        <label for="password">Password</label>
        <input id="password" name="password" type="password" />
        <button type="submit">Log In</button>
      </form>
      <a href="/signup">No Account? Sign Up</a>
      <%}%>
    </main>
    <%- include('partials/footer') %>
  </body>

  <script>
    function openModal() {
      document.getElementById("modalOverlay").style.display = "flex";
    }

    function closeModal() {
      document.getElementById("modalOverlay").style.display = "none";
    }
  </script>
</html>
